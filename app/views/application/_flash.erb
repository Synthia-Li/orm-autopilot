<% if flash[:notice] %>
  <div class="alert alert-info" role="alert" id="notice">
    <%= flash[:notice] %>
  </div>
<% elsif flash[:warning] %>
  <div class="alert alert-danger" role="alert" id="warning">
    <%= flash[:warning] %>
  </div>
<% elsif flash[:alert] %>
  <div class="alert alert-danger" role="alert" id="alert">
    <%= flash[:alert] %>
  </div>
<% end %>
