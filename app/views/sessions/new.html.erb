<!DOCTYPE html>
<html>
<head>
  <title>Login</title>
</head>
<body>

<div class="login-container">
  <h1>Login</h1>

  <%= render 'flash' %>
  
  <%= form_with(scope: :session, url: login_path, local: true) do |form| %>
    <div class="form-group">
      <%= form.label :email %>
      <%= form.email_field :email, id: 'email', required: true, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :password %>
      <%= form.password_field :password, id: 'password', required: true, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.submit "Log In", class: 'btn btn-primary' %>
    </div>
  <% end %>

  <%= link_to 'Sign up', signup_path, id: 'signup-link' %>
</div>

</body>
</html>
