<h1 class="mt-3 text-center">Update User Info For User "<%= @user.send(:email) %>"</h1>
<div class="d-flex justify-content-center">
  <div class="signup-container fix-width">

    <%= render 'flash' %>

    <%= form_tag user_path(@user), method: :put do %>
      <div class="form-group centered-div mt-2">
        <%= label_tag 'password', 'Old Password' %>
        <%= password_field_tag 'password', nil, class: 'form-control', required: true %>
      </div>

      <div class="form-group mt-2">
        <%= label_tag 'new_password', 'New Password' %>
        <%= password_field_tag 'new_password', nil, class: 'form-control', required: true %>
      </div>

      <div class="form-group mt-2">
        <%= label_tag 'api_key', 'API Key' %>
        <%= text_field_tag 'api_key', nil, class: 'form-control', required: false %>
      </div>

      <div class="form-group mt-3 text-center">
        <%= submit_tag 'Update', class: 'btn btn-primary' %> 
        <%= link_to 'Cancel', orms_path, class: 'btn btn-secondary' %>
      </div>
    <% end %>
  </div>
</div>