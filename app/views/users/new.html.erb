<div class="d-flex justify-content-center">
<div class="signup-container">
  <h1 class='text-center mt-4'>Sign Up</h1>

  <%= render 'flash' %>

  <%= form_with(model: User.new, url: signup_path, local: true) do |form| %>
    <div class="form-group centered-div">
      <%= form.label :email %>
      <%= form.email_field :email, id: 'email', required: true, class: 'form-control' %>
    </div>

    <div class="form-group centered-div mt-2">
      <%= form.label :password %>
      <%= form.password_field :password, id: 'password', required: true, class: 'form-control' %>
    </div>

    <div class="form-group mt-3 text-center">
      <%= form.submit "Sign Up", class: 'btn btn-primary' %>
    </div>
  <% end %>

  <%= link_to 'Log in', login_path, class: 'signup-link' %>
</div>
</div>