<!DOCTYPE html>
<html>
<head>
  <title>Sign Up</title>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="signup-container">
  <h1>Sign Up</h1>

  <% if flash[:alert] %>
    <div class="alert alert-info">
      <%= flash[:alert] %>
    </div>
  <% end %>

  <%= form_with(model: User.new, url: signup_path, local: true) do |form| %>
    <div class="form-group">
      <%= form.label :email %>
      <%= form.email_field :email, id: 'email', required: true, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :password %>
      <%= form.password_field :password, id: 'password', required: true, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.submit "Sign Up", class: 'btn btn-primary' %>
    </div>
  <% end %>

  <%= link_to 'Log in', login_path %>
</div>

</body>
</html>
